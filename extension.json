{
    "name": "MWAssistant",
    "version": "0.1.0",
    "author": [
        "Your name"
    ],
    "descriptionmsg": "mwassistant-desc",
    "type": "other",
    "requires": {
        "MediaWiki": ">=1.39.0"
    },
    "AutoloadNamespaces": {
        "MWAssistant\\": "includes/"
    },
    "MessagesDirs": {
        "MWAssistant": [
            "i18n"
        ]
    },
    "ExtensionMessagesFiles": {
        "MWAssistantAlias": "MWAssistant.alias.php"
    },
    "ResourceModules": {
        "ext.mwassistant.chat": {
            "scripts": [
                "resources/mwassistant.chat.js"
            ],
            "styles": [
                "resources/mwassistant.chat.css"
            ],
            "dependencies": [
                "mediawiki.api",
                "mediawiki.util"
            ],
            "targets": [
                "desktop",
                "mobile"
            ]
        },
        "ext.mwassistant.editor": {
            "scripts": [
                "resources/mwassistant.editor.js"
            ],
            "styles": [
                "resources/mwassistant.editor.css"
            ],
            "dependencies": [
                "mediawiki.api",
                "mediawiki.toolbar"
            ],
            "targets": [
                "desktop"
            ]
        }
    },
    "SpecialPages": {
        "MWAssistant": "MWAssistant\\Special\\SpecialMWAssistant"
    },
    "Hooks": {
        "BeforePageDisplay": "MWAssistant\\Hooks\\MWAssistantHooks::onBeforePageDisplay"
    },
    "AvailableRights": [
        "mwassistant-use"
    ],
    "Rights": {
        "mwassistant-use": "Use MWAssistant AI features"
    },
    "APIModules": {
        "mwassistant-chat": "MWAssistant\\Api\\ApiMWAssistantChat",
        "mwassistant-search": "MWAssistant\\Api\\ApiMWAssistantSearch",
        "mwassistant-smw": "MWAssistant\\Api\\ApiMWAssistantSMW",
        "mwassistant-action": "MWAssistant\\Api\\ApiMWAssistantAction"
    },
    "load_composer_autoloader": true,
    "url": "https://www.mediawiki.org/wiki/Extension:MWAssistant",
    "license-name": "GPL-3.0-or-later",
    "config": {
        "MWAssistantMCPBaseUrl": "http://localhost:8000",
        "MWAssistantJWTSecret": "",
        "MWAssistantEnabled": true
    },
    "manifest_version": 2
}