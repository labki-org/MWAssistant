{
    "name": "MWAssistant",
    "version": "0.1.0",
    "author": [
        "Daniel Aharoni"
    ],
    "descriptionmsg": "mwassistant-desc",
    "type": "other",
    "requires": {
        "MediaWiki": ">=1.39.0"
    },
    "AutoloadNamespaces": {
        "MWAssistant\\": "includes/"
    },
    "MessagesDirs": {
        "MWAssistant": [
            "i18n"
        ]
    },
    "ExtensionMessagesFiles": {
        "MWAssistantAlias": "MWAssistant.alias.php"
    },
    "ResourceModules": {
        "ext.mwassistant.chat": {
            "scripts": [
                "resources/mwassistant.chat.js"
            ],
            "styles": [
                "resources/mwassistant.chat.css"
            ],
            "dependencies": [
                "mediawiki.api",
                "mediawiki.util"
            ],
            "targets": [
                "desktop",
                "mobile"
            ],
            "localBasePath": "",
            "remoteExtPath": "MWAssistant"
        },
        "ext.mwassistant.editor": {
            "scripts": [
                "resources/mwassistant.editor.js"
            ],
            "styles": [
                "resources/mwassistant.editor.css"
            ],
            "dependencies": [
                "mediawiki.api",
                "ext.mwassistant.chat"
            ],
            "targets": [
                "desktop"
            ],
            "localBasePath": "",
            "remoteExtPath": "MWAssistant"
        },
        "ext.mwassistant.global": {
            "scripts": [
                "resources/mwassistant.global.js"
            ],
            "styles": [
                "resources/mwassistant.global.css"
            ],
            "dependencies": [
                "mediawiki.util",
                "jquery"
            ],
            "targets": [
                "desktop",
                "mobile"
            ],
            "localBasePath": "",
            "remoteExtPath": "MWAssistant"
        },
        "ext.mwassistant.embeddings": {
            "scripts": [
                "resources/mwassistant.embeddings.js"
            ],
            "styles": [
                "resources/mwassistant.embeddings.css"
            ],
            "dependencies": [
                "mediawiki.widgets",
                "oojs-ui-core",
                "oojs-ui-widgets"
            ],
            "targets": [
                "desktop",
                "mobile"
            ],
            "localBasePath": "",
            "remoteExtPath": "MWAssistant"
        }
    },
    "SpecialPages": {
        "MWAssistant": "MWAssistant\\Special\\SpecialMWAssistant",
        "MWAssistantEmbeddings": "MWAssistant\\Special\\SpecialMWAssistantEmbeddings"
    },
    "Hooks": {
        "BeforePageDisplay": "MWAssistant\\Hooks\\MWAssistantHooks::onBeforePageDisplay",
        "PageSaveComplete": "MWAssistant\\Hooks\\AutoEmbeddingHooks::onPageSaveComplete",
        "PageDeleteComplete": "MWAssistant\\Hooks\\AutoEmbeddingHooks::onPageDeleteComplete"
    },
    "AvailableRights": [
        "mwassistant-use"
    ],
    "APIModules": {
        "mwassistant-chat": "MWAssistant\\Api\\ApiMWAssistantChat",
        "mwassistant-search": "MWAssistant\\Api\\ApiMWAssistantVectorSearch",
        "mwassistant-keyword-search": "MWAssistant\\Api\\ApiMWAssistantKeywordSearch",
        "mwassistant-smw": "MWAssistant\\Api\\ApiMWAssistantSMW"
    },
    "load_composer_autoloader": true,
    "url": "https://www.mediawiki.org/wiki/Extension:MWAssistant",
    "license-name": "GPL-3.0-or-later",
    "config": {
        "MWAssistantMCPBaseUrl": {
            "value": "http://localhost:8000"
        },
        "MWAssistantJWTMWToMCPSecret": {
            "value": ""
        },
        "MWAssistantJWTMCPToMWSecret": {
            "value": ""
        },
        "MWAssistantEnabled": {
            "value": true
        },
        "MWAssistantAutoEmbed": {
            "value": false
        },
        "MWAssistantJWTTTL": {
            "value": 30
        },
        "MWAssistantWikiId": {
            "value": "",
            "description": "Unique identifier for this wiki instance (required for multi-tenant MCP server)"
        }
    },
    "manifest_version": 2
}