{
    "name": "mwassistant/mwassistant",
    "type": "mediawiki-extension",
    "description": "MediaWiki extension integrating MCP-backed AI Assistants (chat, search, SMW queries, embeddings).",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "^43.0",
        "mediawiki/mediawiki-phan-config": "^0.14.0",
        "mediawiki/minus-x": "^1.1.3",
        "php-parallel-lint/php-parallel-lint": "^1.4.0"
    },
    "autoload": {
        "psr-4": {
            "MWAssistant\\": "includes/"
        }
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor --exclude node_modules --exclude extensions",
            "minus-x check .",
            "@phpcs"
        ],
        "fix": [
            "minus-x fix .",
            "phpcbf"
        ],
        "phan": "phan -d . --long-progress-bar --color",
        "phpcs": "phpcs -sp --cache"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "wikimedia/composer-merge-plugin": true,
            "composer/installers": true
        }
    }
}